{% extends 'base.html.twig' %}

{% block title %}Home Sports TV{% endblock %}

{% block body %}

<div class="container">
    <h1>HomeSportsTV</h1>
    <div>
        <h2>Ajouter un site</h2>

        {{ form(form) }}
    </div>

    <div>
        <h2>Sites</h2>
        <ul class="list-group">
            {% for site in sites %}
            <li class="list-group-item" id="site-{{ site.id }}">
                        {{ include('site/site.html.twig',{site:site}) }}
                    </li>
                {% endfor %}
            </ul>
        </div>
    </div>
{% endblock %}
